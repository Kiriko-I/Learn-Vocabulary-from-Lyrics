<div class="col-11">
  <table class="table">
    <thead>
      <i class="fa-solid fa-comment"></i> コメント
    </thead>
    <tbody>
      <% post.comments.each do |comment| %>
        <tr>
          <td>
            <%= link_to show_user_path(comment.user.id), class: "text-decoration-none" do %>
              <% if comment.user.profile_image.present? %>
                <%= image_tag comment.user.profile_image, size:'50x50', class: "rounded-circle" %>
              <% else %>
                <i class="fa-solid fa-snowman fa-3x"></i>
              <% end %>
              <%= comment.user.nickname %>
            <% end %>
          </td>
          <td><%= comment.comment %></td>
          <td>
            <% if comment.user == current_user || admin_signed_in? %>
              <%= link_to "コメント削除", post_comment_path(post, comment), method: :delete, class: "btn btn-danger pull-right", remote: false %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>
