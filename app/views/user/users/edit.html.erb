<h1>ユーザー情報編集</h1>

<div class="row">
  <%= form_with model: @user, url: update_information_path, local: true do |f| %>
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="col-7 mb-3">
      <label for="name" class="form-label">氏名</label>
      <%= f.text_field :name, class: "form-control", id: "name" %>
    </div>
    <div class="col-7 mb-3">
      <label for="profile_image" class="form-label">プロフィール画像</label>
      <%= f.file_field :profile_image, class: "form-control", accept: 'image/*', id: "profile_image" %>
    </div>
    <div class="col-7 mb-3">
      <label for="nickname" class="form-label">投稿に表示するニックネーム(2～20文字)</label>
      <%= f.text_field :nickname, class: "form-control", id: "nickname" %>
    </div>
    <div class="col-7 mb-3">
      <label for="prefecture" class="form-label">登録する都道府県名</label>
      <%= f.select :prefecture, User.prefecture_methods.map { |k| [k[0], k[1]] }, {}, class: "form-select", id: "prefecture" %>
    </div>
    <div class="col-7 mb-3">
      <%= f.submit "更新", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
