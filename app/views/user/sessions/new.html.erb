<h1>ログイン</h1>

<div class="row">
  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="col-7 mb-3">
      <label for="email" class="form-label">メールアドレス</label>
      <%= f.email_field :email, placeholder: "name@example.com", class: "form-control", id: "email" %>
    </div>
    <div class="col-7 mb-3">
      <label for="password" class="form-label">パスワード</label>
      <%= f.password_field :password, class: "form-control", id: "password" %>
    </div>
  
    <!--<% if devise_mapping.rememberable? %>-->
    <!--  <div class="col-7 mb-3">-->
    <!--    <%= f.check_box :remember_me %>-->
    <!--    <%= f.label :remember_me %>-->
    <!--  </div>-->
    <!--<% end %>-->
  
    <div class="col-7 mb-3">
      <%= f.submit "ログイン", class: "btn btn-info" %>
    </div>
  <% end %>
  <%= render "user/shared/links" %>
</div>