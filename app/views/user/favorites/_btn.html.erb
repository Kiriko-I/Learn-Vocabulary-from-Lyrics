<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true, class: "text-decoration-none text-white" do %>
    <%= post.favorites.count %> <i class="fa-solid fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true, class: "text-decoration-none text-white" do %>
    <%= post.favorites.count %> <i class="fa-regular fa-bookmark"></i>
  <% end %>
<% end %>
