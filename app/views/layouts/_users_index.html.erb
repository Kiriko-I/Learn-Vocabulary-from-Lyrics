<div class="row row-cols-1 g-4">
  <% users.each do |user| %>
    <div class="col">
      <div class="card h-100 border-secondary">
        <div class="card-body">
          <h5 class="card-title mb-3">
            <% if user.profile_image.exist? %>
              <%= image_tag user.user.profile_image, size:'10x10' %>
            <% else %>
              <i class="fa-solid fa-snowman fa-2xl"></i>
            <% end %>
            <%= user.nickname %>
            <%= user.prefecture %>
          </h5>
          <% if admin_signed_in? %>
            <%= link_to admin_user_path(user.id), class: "btn btn-secondary" do %>
              <i class="fa-solid fa-eye"></i> ユーザーの投稿を見る
            <% end %>
            <%= link_to admin_user_path(user.id), method: :delete, class: "btn btn-danger" do %>
              <i class="fa-solid fa-trash"></i> ユーザーを削除する
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>